<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LuxStay - Choisir votre rôle</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-rose-50 to-orange-50 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 glass-effect p-8 rounded-2xl shadow-2xl">
        <!-- Header -->
        <div class="text-center">
            <div class="flex items-center justify-center space-x-2 mb-6">
                <i data-feather="home" class="w-8 h-8 text-rose-500"></i>
                <span class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-rose-500 to-orange-500">
                    LuxStay
                </span>
            </div>
            
            <!-- Google Account Info -->
            <div class="flex items-center justify-center mb-4">
                <img src="/api/placeholder/24/24" alt="Google" class="w-6 h-6 mr-2">
                <span class="text-gray-600">Compte Google connecté</span>
            </div>
            
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Finalisez votre inscription</h2>
            <p class="text-gray-600 mb-6">Choisissez votre rôle et définissez votre mot de passe</p>
        </div>

        <form class="space-y-6">
            <!-- Role Selection Buttons -->
            <div class="grid grid-cols-2 gap-4 mb-8">
                <button type="button" class="role-btn flex flex-col items-center justify-center p-6 rounded-xl border-2 border-gray-200 hover:border-rose-400 transition-all bg-white bg-opacity-50 group" data-role="proprietaire">
                    <i data-feather="home" class="w-8 h-8 text-rose-500 mb-2 group-hover:scale-110 transition-transform"></i>
                    <span class="text-lg font-medium text-gray-700">Propriétaire</span>
                </button>
                <button type="button" class="role-btn flex flex-col items-center justify-center p-6 rounded-xl border-2 border-gray-200 hover:border-rose-400 transition-all bg-white bg-opacity-50 group" data-role="voyageur">
                    <i data-feather="compass" class="w-8 h-8 text-rose-500 mb-2 group-hover:scale-110 transition-transform"></i>
                    <span class="text-lg font-medium text-gray-700">Voyageur</span>
                </button>
            </div>

            <!-- Password Field -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Créez votre mot de passe</label>
                <input type="password" required class="w-full px-4 py-2 rounded-lg bg-white bg-opacity-50 border border-gray-300 focus:ring-2 focus:ring-rose-400 focus:border-transparent outline-none">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Confirmez le mot de passe</label>
                <input type="password" required class="w-full px-4 py-2 rounded-lg bg-white bg-opacity-50 border border-gray-300 focus:ring-2 focus:ring-rose-400 focus:border-transparent outline-none">
            </div>

            <button type="submit" class="w-full py-3 px-4 bg-gradient-to-r from-rose-500 to-orange-500 text-white rounded-lg hover:opacity-90 transition-opacity transform hover:-translate-y-0.5 duration-200 font-medium">
                Terminer l'inscription
            </button>
        </form>
    </div>

    <script>
        feather.replace();

        // Add active state to role buttons
        document.querySelectorAll('.role-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Remove active state from all buttons
                document.querySelectorAll('.role-btn').forEach(btn => {
                    btn.classList.remove('border-rose-400', 'bg-rose-50');
                });
                // Add active state to clicked button
                this.classList.add('border-rose-400', 'bg-rose-50');
                // You can store the selected role
                const selectedRole = this.dataset.role;
            });
        });
    </script>
</body>
</html>