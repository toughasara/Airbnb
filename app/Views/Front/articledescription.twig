                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="pt-20 container mx-auto px-4">
        <!-- Property Header -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">
                Villa Vue Mer
            </h1>
            <div class="flex items-center space-x-2 text-gray-600">
                <i data-feather="map-pin" class="w-4 h-4"></i>
                <span>Nice, France</span>
            </div>
        </div>

        <!-- Property Images Carousel -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div class="rounded-2xl overflow-hidden">
                <img src="/api/placeholder/800/600" alt="Villa Vue Mer" class="w-full h-96 object-cover">
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div class="rounded-2xl overflow-hidden">
                    <img src="/api/placeholder/400/300" alt="Villa Vue Mer" class="w-full h-48 object-cover">
                </div>
                <div class="rounded-2xl overflow-hidden">
                    <img src="/api/placeholder/400/300" alt="Villa Vue Mer" class="w-full h-48 object-cover">
                </div>
